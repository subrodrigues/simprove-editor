<?import com.jfoenix.controls.JFXSlider?>
<StackPane fx:id="newSignalRoot" prefHeight="400.0" prefWidth="600.0" styleClass="float-window-style" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox>
            <children>
                <StackPane fx:id="headerPane" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="150.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="edit-dialog-title" text="New Signal">
                     <StackPane.margin>
                        <Insets top="16.0" />
                     </StackPane.margin>
                        </Text>
                  <VBox prefHeight="200.0" prefWidth="100.0" StackPane.alignment="CENTER">
                     <children>

                         <HBox>
                             <VBox alignment="CENTER_LEFT" minWidth="84.0">
                                <Text fx:id="signalType" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="edit-dialog-parameter-title" text="Signal: " />
                             </VBox>
                             <JFXComboBox fx:id="signalTypeComboBox" prefHeight="30.0" prefWidth="600.0" promptText="Select Signal Type" styleClass="combo-box">
                                 <validators>
                                     <RequiredFieldValidator message="Category Required!">
                                         <!--<MaterialIconView glyphName="WARNING" size="1.2em" />-->
                                     </RequiredFieldValidator>
                                 </validators>
                             </JFXComboBox>

                         </HBox>

                         <!-- Signal Numeric type -->
                         <VBox alignment="CENTER" >
                             <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="edit-dialog-parameter-title" text="Value" />

                             <VBox.margin>
                                 <Insets top="32.0" />
                             </VBox.margin>
                         </VBox>

                         <JFXSlider fx:id="signalNumericValue" styleClass="jfx-slider-colored" maxWidth="Infinity">
                             <VBox.margin>
                                 <Insets top="16.0" />
                             </VBox.margin>
                         </JFXSlider>

                         <!-- TODO: Signal Categoric type -->

                     </children>
                     <StackPane.margin>
                        <Insets left="22.0" right="22.0" top="46.0" />
                     </StackPane.margin>
                  </VBox>
                    </children>
                </StackPane>
                <StackPane style="-fx-background-color: #fafafa;">

                    <HBox alignment="CENTER" StackPane.alignment="CENTER">

                        <JFXButton fx:id="cancelButton" buttonType="FLAT" prefHeight="40" prefWidth="100"
                                   styleClass="cancel-jfx-button-raised" text="Cancel" StackPane.alignment="CENTER_RIGHT">
                         <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                         </HBox.margin></JFXButton>

                        <JFXButton fx:id="acceptButton" buttonType="RAISED" prefHeight="40" prefWidth="100"
                                   styleClass="apply-jfx-button-raised" text="Accept" StackPane.alignment="CENTER_RIGHT">
                         <HBox.margin>
                            <Insets bottom="10.0" right="10.0" top="10.0" />
                         </HBox.margin></JFXButton>
                    </HBox>
                    <StackPane.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </StackPane.margin>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </StackPane>
            </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </VBox>

    </children>

</StackPane>
