<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <items>
        <StackPane>
            <StackPane styleClass="pane-title-background">
                <padding>
                    <Insets top="52" />
                </padding>
                <ScrollPane fx:id="statesScrollPane" fitToWidth="true" hbarPolicy="NEVER">
                    <content>
                        <JFXMasonryPane fx:id="statesGridView" HSpacing="10" VSpacing="10">
                            <padding>
                                <Insets bottom="16" left="16" right="16" top="16" />
                            </padding>
                        </JFXMasonryPane>
                    </content>
                </ScrollPane>
                <JFXButton fx:id="addStateButton" buttonType="RAISED" prefHeight="60" prefWidth="60"
                           style="-fx-background-radius: 60;-fx-background-color: #1565C0" StackPane.alignment="BOTTOM_RIGHT">
                    <graphic>
                        <StackPane>
                            <MaterialIconView glyphName="ADD" size="2em"
                                              styleClass="fab-add-icon"/>
                        </StackPane>
                    </graphic>
               <StackPane.margin>
                  <Insets bottom="22.0" left="22.0" right="22.0" top="22.0" />
               </StackPane.margin></JFXButton>

            </StackPane>
            <Label styleClass="pane-title-label" StackPane.alignment="TOP_CENTER">
                <padding>
                    <Insets top="10" />
                </padding>
                STATES
            </Label>

        </StackPane>
        <StackPane>
            <StackPane styleClass="pane-title-background">
                <padding>
                    <Insets top="52" />
                </padding>
                <ScrollPane fx:id="actionsScrollPane" fitToWidth="true" hbarPolicy="NEVER">
                    <JFXMasonryPane fx:id="actionsGridView" HSpacing="10" VSpacing="10">
                        <padding>
                            <Insets bottom="16" left="16" right="16" top="16" />
                        </padding>
                    </JFXMasonryPane>
                </ScrollPane>
            </StackPane>
            <Label styleClass="pane-title-label" StackPane.alignment="TOP_CENTER">
                <padding>
                    <Insets top="10" />
                </padding>
                ACTIONS
            </Label>
        </StackPane>
    </items>
</SplitPane>
