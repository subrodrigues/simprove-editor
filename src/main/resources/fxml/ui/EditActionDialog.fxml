<StackPane fx:id="editActionRoot" prefHeight="400.0" prefWidth="600.0" styleClass="float-window-style" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox>
            <children>
                <StackPane fx:id="headerPane" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="150.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Text fx:id="editActionTitle" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="edit-dialog-title" text="Edit Action">
                     <StackPane.margin>
                        <Insets top="16.0" />
                     </StackPane.margin>
                        </Text>
                  <VBox prefHeight="200.0" prefWidth="100.0" StackPane.alignment="CENTER">
                     <children>

                         <HBox>
                             <VBox alignment="CENTER_LEFT" minWidth="84.0">
                                 <Text fx:id="actionType" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="edit-dialog-parameter-title" text="Action: " />
                             </VBox>
                             <JFXComboBox fx:id="actionTypeComboBox" editable="true" prefHeight="30.0" prefWidth="600.0" promptText="Action Type" styleClass="combo-box">
                                 <validators>
                                     <RequiredFieldValidator message="Category Required!">
                                         <!--<MaterialIconView glyphName="WARNING" size="1.2em" />-->
                                     </RequiredFieldValidator>
                                 </validators>
                             </JFXComboBox>

                             <!--<VBox alignment="CENTER_LEFT" minWidth="84.0">-->
                                <!--<Text fx:id="actionName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="edit-dialog-parameter-title" text="Name: " />-->
                             <!--</VBox>-->
                             <!--<JFXTextField fx:id="inputName" prefHeight="30.0" prefWidth="200.0" promptText="Action name" styleClass="edit-dialog-parameter-input">-->
                             <!--<validators>-->
                                 <!--<RequiredFieldValidator message="Input Required!">-->
                                     <!--&lt;!&ndash;<MaterialIconView glyphName="WARNING" size="1.2em" />&ndash;&gt;-->
                                 <!--</RequiredFieldValidator>-->
                             <!--</validators>-->
                             <!--</JFXTextField>-->
                         </HBox>

                         <HBox>
                             <VBox alignment="CENTER_LEFT" minWidth="84.0">
                                 <Text fx:id="actionTransition" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="edit-dialog-parameter-title" text="Transition:" />
                             </VBox>
                             <JFXComboBox fx:id="transitionComboBox" prefHeight="30.0" prefWidth="300.0" promptText="Select State" styleClass="combo-box">
                            </JFXComboBox>

                             <JFXNumericTextField fx:id="inputTransitionDuration" labelFloat="true" prefHeight="30.0" prefWidth="200.0" promptText="Timer limit (seconds)?" styleClass="edit-dialog-parameter-input">
                                 <validators>
                                     <RequiredFieldValidator message="Input Required!">
                                         <!--<MaterialIconView glyphName="WARNING" size="1.2em" />-->
                                     </RequiredFieldValidator>
                                 </validators>

                                 <HBox.margin>
                                 <Insets left="10.0" />
                              </HBox.margin></JFXNumericTextField>

                             <VBox.margin>
                              <Insets top="32.0" />
                           </VBox.margin>

                         </HBox>

                         <HBox>

                             <VBox alignment="CENTER_LEFT" minWidth="84.0">
                                 <Text fx:id="actionCategory" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="edit-dialog-parameter-title" text="Category:" />
                             </VBox>
                             <JFXComboBox fx:id="categoryComboBox" prefHeight="30.0" prefWidth="600.0" promptText="Select Category" styleClass="combo-box">
                                 <validators>
                                     <RequiredFieldValidator message="Category Required!">
                                         <!--<MaterialIconView glyphName="WARNING" size="1.2em" />-->
                                     </RequiredFieldValidator>
                                 </validators>
                             </JFXComboBox>
                             <VBox.margin>
                                 <Insets top="32.0" />
                             </VBox.margin>

                         </HBox>


                    </children>
                     <StackPane.margin>
                        <Insets left="22.0" right="22.0" top="46.0" />
                     </StackPane.margin>
                  </VBox>
                    </children>
                </StackPane>
                <StackPane style="-fx-background-color: #fafafa;">

                    <HBox alignment="CENTER" StackPane.alignment="CENTER">
                        <JFXButton fx:id="deleteButton" prefWidth="100" prefHeight="40" buttonType="FLAT" text="Delete"
                                   styleClass="cancel-jfx-button-flat" StackPane.alignment="CENTER_RIGHT">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin></JFXButton>

                        <JFXButton fx:id="cancelButton" buttonType="FLAT" prefHeight="40" prefWidth="100"
                                   styleClass="cancel-jfx-button-raised" text="Cancel" StackPane.alignment="CENTER_RIGHT">
                         <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                         </HBox.margin></JFXButton>

                        <JFXButton fx:id="applyButton" buttonType="RAISED" prefHeight="40" prefWidth="100"
                                   styleClass="apply-jfx-button-raised" text="Apply" StackPane.alignment="CENTER_RIGHT">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin></JFXButton>
                    </HBox>
                    <StackPane.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </StackPane.margin>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </StackPane>
            </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </VBox>
    </children>
</StackPane>
